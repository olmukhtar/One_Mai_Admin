{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif,svg,webp}", "/static/*", "/manifest.json"]
  },
  "mimeTypes": {
    ".js": "application/javascript",
    ".css": "text/css"
  },
  "responseOverrides": {
    "404": { "rewrite": "/index.html" }
  },
  "routes": [
    {
      "route": "/",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/static/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/manifest.json",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ]
}